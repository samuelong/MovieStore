@{ Layout = "_LayoutUsers";}
@model MovieStore.Models.ViewModels.CartModel
@using System.Globalization;

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="text-danger" asp-validation-summary="All"></div>
            <form asp-action="GoToPayment" method="post">
                <table class="table table-bordered table-condensed table-hover table-responsive">
                    <tr>
                        <th class="col-xs-6">Movie Name</th>
                        <th class="col-xs-2">Movie Price</th>
                        <th colspan="2" class="col-xs-4">Duration of Rental</th>
                    </tr>
                    @for (int i = 0; i < Model.Rentals.Count(); i++)
                    {
                        @Html.HiddenFor(m => m.Rentals[i].MovieID)
                        @Html.HiddenFor(m => m.Rentals[i].RentalID)
                        @Html.HiddenFor(m => m.Rentals[i].EndRentalDate)
                        @Html.HiddenFor(m => m.Rentals[i].StartRentalDate)
                        @Html.HiddenFor(m => m.Rentals[i].Cost)
                        <tr>
                            <td>@Model.Rentals[i].MovieTitle</td>
                            <td>@Model.Rentals[i].Cost</td>
                            <td>@Model.Rentals[i].StartRentalDate</td>
                            <td>@Model.Rentals[i].EndRentalDate</td>
                        </tr>
                    }
                </table>
                <input type="submit" class="btn-success" value="Purchase" />
            </form>
        </div>
    </div>
</div>