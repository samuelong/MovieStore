@{ Layout = "_LayoutUsers";}
@model MovieStore.Models.Cart
@using System.Globalization;

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <table class="table table-bordered table-condensed table-hover table-responsive">
                @foreach (var m in Model.GetCart())
                {
                    <tr>
                        <th class="col-xs-6">Movie Name</th>
                        <th class="col-xs-2">Movie Price</th>
                        <th class="col-xs-4">Duration of Rental</th>
                    </tr>
                    <tr>
                        <td>@m.Movie.Title</td>
                        <td>@m.Movie.Price.ToString("C2", CultureInfo.CurrentCulture)</td>
                        <td>@m.StartRentalDate-@m.EndRentalDate</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            <form enctype="application/x-www-form-urlencoded" action="/Home/GoToPayment" method="post">
                <input type="submit" />
            </form>
        </div>
    </div>
</div>